<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="?selectableItemBackground"
        android:paddingHorizontal="@dimen/large_padding"
        xmlns:tools="http://schemas.android.com/tools">
    <Switch
            android:id="@+id/swItemTextSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"/>

    <TextView
            android:id="@+id/tvItemTextSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            tools:text="Draggable"
            android:textColor="@color/quantum_black_secondary_text"
            android:textSize="@dimen/text_size">
    </TextView>
    <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:paddingTop="@dimen/small_padding"
            android:background="@color/quantum_black_divider"
            android:layout_gravity="bottom"/>
</FrameLayout>